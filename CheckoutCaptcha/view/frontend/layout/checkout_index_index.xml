                                                                            <item name="formId" xsi:type="string">co-payment-form</item>
                                                                            <item name="configSource" xsi:type="string">checkoutConfig</item>
                                                                            <item name="provider" xsi:type="string">checkoutProvider</item>
                                                                        </item>
                                                                    </item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
